<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>
    <%= t 'title.system_title' %>
    -
    <%= t 'views.login.title' %>
  </title>
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="hold-transition login-page">
<div class="login-box">
  <div class="login-logo">
    <%= link_to '/' do %>
        <b><%= t 'title.system_title' %></b>
    <% end %>
  </div><!-- /.login-logo -->
  <div class="login-box-body">
    <%= render 'shared/messages' %>
    <p class="login-box-msg"><%= t 'views.login.title' %></p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group has-feedback">
        <%= f.text_field :username, class: 'form-control', placeholder: t('views.login.placeholders.type.username'), autofocus: true %>
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= f.password_field :password, class: 'form-control', placeholder: t('views.login.placeholders.type.password'), autocomplete: 'off' %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-8">
          <div class="checkbox icheck">
            <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
            <% end -%>
          </div>
        </div><!-- /.col -->
        <div class="col-xs-4">
          <%= f.submit t('buttons.login'), class: 'btn btn-primary btn-block btn-flat' %>
        </div><!-- /.col -->
      </div>
    <% end %>
  </div><!-- /.login-box-body -->
</div><!-- /.login-box -->
<%= javascript_include_tag 'footer', 'data-turbolinks-track' => true %>
<script>
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });
    });
</script>
</body>
</html>